<%- include('navbar') %>
<div class="container-fluid">
  <div class="row edit-creature">
    <h1 class="titulo-all-wizards font-wizard text-center p-5">
      Edit your fantastic creature
    </h1>
    <div class="creature-form col-12 col-md-6 col-lg-4 text-center">
      <form
        action="/creature/editCreature/<%- result[0].creature_id %>/<%- result[0].wizard_id %>"
        method="post"
        enctype="multipart/form-data"
      >
        <input
          class="form-control form-control-lg my-3 font-wizard text-center"
          type="text"
          placeholder="Name of the creature"
          aria-label=".form-control-lg example"
          name="creature_name"
          required
          value="<%- result[0].creature_name %>"
        />

        <div class="my-3">
          <label for="formFileLg" class="form-label font-wizard texto-blanco"
            >Upload a new picture of your creature</label
          >
          <input
            class="form-control form-control-lg font-wizard"
            id="formFileLg"
            type="file"
            name="img"
          />
        </div>
        <button type="submit" class="btn btn-secondary mb-3 button-portada m-1">
          SAVE AND GO BACK <i class="bi bi-magic"></i>
        </button>
      </form>
      <br /><br />
    </div>
  </div>
</div>
<%- include('footer') %>
