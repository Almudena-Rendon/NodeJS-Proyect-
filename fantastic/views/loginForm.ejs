<%- include('navbar') %>
<div class="container-fluid">
  <div class="row login">
    <div class="login-form col-12 col-md-6 col-lg-4 text-center">
      <h1 class="titulo-all-wizards font-wizard text-center p-4">
        Enter your account
      </h1>
      <form
        action="/wizard/login"
        method="post"
        enctype="application/x-www-form-urlencoded"
      >
        <input
          class="form-control form-control-lg my-3  font-wizard text-center"
          type="email"
          placeholder="Email"
          aria-label=".form-control-lg example"
          name="email"
          required
        />
        <input
          class="form-control form-control-lg my-3  font-wizard text-center"
          type="password"
          placeholder="Password"
          aria-label=".form-control-lg example"
          name="password"
          required
        />
        <button type="button-portada" class="btn btn-secondary button-portada">
          LOGIN <i class="bi bi-box-arrow-in-right"></i>
        </button>
      </form>
      <br /><br />
      <h3 class="p-2 texto-blanco font-wizard" ><%- message %></h3>
    </div>
  </div>
</div>
<%- include('footer') %>
